<openerp>
    <data> 
    	


    <record id="view_temporary_mail" model="ir.ui.view">
        <field name="name">temporary mail wizard</field>
        <field name="model">temporary.mail</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
        <form string="Generate Mail">
            <label string="Are you sure you want to generate email for all selected invoices?" colspan="4"/>
            <separator string=""/>
            <group colspan="4" col="4">
            	<button icon="gtk-cancel" special="cancel" string="Cancel"/>
            	<button icon="terp-gtk-go-back-rtl" string="Generate" name="action_generate_mails" type="object"/>
            </group>
        </form>
        </field>
    </record>
    
    <act_window name="Generate invoices"
        res_model="temporary.mail"
        src_model="account.invoice"
        view_mode="form"
        view_id="view_temporary_mail"
        target="new" 
        key2="client_action_multi"
        id="act_temporary_mail"/>      
        	
    </data>
</openerp>