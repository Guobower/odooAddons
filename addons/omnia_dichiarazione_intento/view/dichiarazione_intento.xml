<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="dichiarazione_intento_form" model="ir.ui.view">
            <field name="name">dichiarazione.intento.form</field>
            <field name="model">dichiarazione.intento</field>
            <field name="arch" type="xml">
				<form>
					<header>
						<button name="action_confirm" 
								string="Confirm" 
								type="object"
								states="draft" 
								groups="base.group_user"/>
						<button name="action_draft" 
								string="Reset To Draft" 
								type="object"
								states="confirmed"
								groups="base.group_user"/> 
						<field name="state" 
							widget="statusbar" 
							statusbar_visible="draft,confirmed" 
							/>
					</header>
					<sheet>
						<field name="name"/>
						<field name="date_start"/>
						<field name="date_end"/>
					</sheet>
					<div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
				</form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="dichiarazione_intento_tree">
            <field name="name">Dichiarazione Intento</field>
            <field name="model">dichiarazione.intento</field>
            <field name="arch" type="xml">
                <tree string="Timesheet Document"
                		colors="red:state=='draft';green:state=='confirmed'">
						<field name="name"/>
						<field name="date_start"/>
						<field name="date_end"/>
						<field name="state"/>
				</tree>
            </field>
        </record>
	</data>
</openerp>