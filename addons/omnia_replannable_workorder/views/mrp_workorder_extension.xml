<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    <record id="mrp_workorder_form_replannable_omnia" model="ir.ui.view">
        <field name="name">mrp.workorder.form.replannable.omnia</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workcenter_form_view_inherit"/>
        <field name="arch" type="xml">
            <field name="move_raw_ids" position="after">
            	<label for="raw_prod_ids" attrs="{'invisible':[('raw_prod_ids', '=', [])]}"></label>
                <field name="raw_prod_ids" attrs="{'invisible':[('raw_prod_ids', '=', [])]}"></field>
                <field name="has_to_be_checked" invisible="1"></field>
                
            </field>
            <xpath expr="//button[@name='button_start'][1]" position="attributes">
            	<attribute name="attrs">{'invisible': ['|', ('has_to_be_checked', '=', True), '|', ('working_state', '=', 'blocked'), '|', ('state', '!=', 'pending')]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_start'][2]" position="attributes">
            	<attribute name="attrs">{'invisible': ['|', ('has_to_be_checked', '=', True), '|', ('working_state', '=', 'blocked'), '|', ('state', '!=', 'ready')]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_start']" position="after">
                <button name="button_check_availability" 
	                type="object" 
	                string="Check Availability"
	                attrs="{'invisible': [('has_to_be_checked', '=', False)]}"
	                />
            </xpath>
        </field>
    </record>

    </data>
</odoo>