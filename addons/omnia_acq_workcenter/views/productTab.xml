<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_template_form_view_acq" model="ir.ui.view">
            <field name="name">acq.product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page string="Sales" position="after">
                    <page string="Acquacontrol">
                    	<group>
                    		<field name="manuale"/>
                    		<field name="colorante"/>
                    		<field name="correzione"/>
                			<field name="percentual"/>
                			<field name="tAgitazione"/>
                    	</group>
                    	<separator string="Righe Dosanat"/>
                		<field name="dosanat_row" widget="one2many_list">
                		<tree string="Righe dosanat" editable="bottom">
                			<field name="acq_dosanat_row"/>
                			<field name="name" invisible = "1"/>
		                	<field name="pos"/>
		                	<field name="prod"/>
		                	<field name="field1"/>
		                	<field name="field2"/>
		                	<field name="fieldn"/>
						</tree>
						</field>
                    	<!--<field name="is_visible"/>-->
                    </page>
                </page>
            </field>
        </record>
        
        <record id="omnia_acq_filter_product" model="ir.ui.view">
            <field name="name">omnia.acq.filter.product</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <search string="Search enabled products">
                    <filter name="visibl_acq_omnia" string="ProductEnabled" domain="['|','|',('manuale','=',True),('colorante','=',True),('correzione','=',True)]"/>
                    <separator/>
                    <filter string="My Entries" domain="[('user_id','=',uid)]"/>
                    <group string="Group By" expand="0">
                        <filter string="Product group" context="{'group_by':'is_visible'}"/>
                    </group>
                </search>
            </field>
        </record>
        
		<record id="omnia_acq_product_act" model="ir.actions.act_window">
		    <field name="name">Product action acq</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">product.template</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form,kanban</field>
		    <field name="context">{"search_default_visibl_acq_omnia":1}</field>
		    <field name="view_id" ref="omnia_acq_workcenter.product_template_form_view_acq"/>
		</record>
		
        <menuitem name="Prodotti"
        	action="product.product_template_action"
            id="acq_products_submenu"
            parent="omnia_acq_workcenter.acq_products_menu"/>
        
        <record id="acq_dosanat_row_form_view" model="ir.ui.view">
            <field name="name">acq.dosanat.form</field>
            <field name="model">acq.dosanat.row</field>
            <field name="arch" type="xml">
                <form string="Rows">
                	<sheet>
                	<group>
                	<field name="name"/>
                	<field name="pos"/>
                	<field name="prod"/>
                	<field name="field1"/>
                	<field name="field2"/>
                	<field name="fieldn"/>
                	</group>
                	</sheet>
                </form>
            </field>
        </record>
     </data>
</openerp>